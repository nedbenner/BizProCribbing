<?xml version= "1.0" encoding= "utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <SeekBar
        android:id="@+id/startTime"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:progress="25"
        android:max="96"
        android:secondaryProgress="100"
        android:thumb="@drawable/stopwatch_unset"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:id="@+id/stopTime"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:progress="75"
        android:max="96"
        android:thumb="@drawable/stopwatch_unset"
        android:layout_below="@id/startTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <SeekBar
        android:id="@+id/lunchTime"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:progress="2"
        android:max="32"
        android:thumb="@drawable/stopwatch_unset"
        android:layout_below="@id/stopTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        style="@style/Titles"
        android:id="@+id/startText"
        android:text="Start: not set"
        android:paddingLeft="20dp"
        android:layout_below="@id/lunchTime"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/Titles"
        android:id="@+id/stopText"
        android:text="Stop: not set"
        android:paddingLeft="20dp"
        android:layout_below="@id/startText"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/Titles"
        android:id="@+id/lunchText"
        android:text="Lunch: 1:00 hour"
        android:paddingRight="20dp"
        android:layout_below="@id/lunchTime"
        android:layout_alignParentEnd="true"  />


    <TextView
        style="@style/Titles"
        android:id="@+id/Total"
        android:text="Total:  not set"
        android:paddingRight="20dp"
        android:layout_below="@id/lunchText"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/sizeButtons"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/minusButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="+" />

    </LinearLayout>

</RelativeLayout>
