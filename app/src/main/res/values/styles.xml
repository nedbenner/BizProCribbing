<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme" />
    
    <!-- Application theme. -->
    <style name="PopupTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--These are used in fragment_as_built______ -->
    <style name="ABStagesFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left|bottom</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AsBuiltDue" parent="@style/ABStagesFont">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="AsBuiltNotDue" parent="@style/ABStagesFont">
        <item name="android:textColor">#707070</item>
    </style>

    <style name="ABTestsTitle" >
        <item name="android:textColor">#0080ff</item>
        <item name="android:textSize">30sp</item> />
    </style>

    <style name="ABTestsDescription" >
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item> />
    </style>

    <style name="ABTestsUnits" parent="@style/ABTestsTitle">
        <item name="android:textSize">20sp</item> />
    </style>

    <style name="ABTestsEntry" parent="@style/ABTestsUnits">
    </style>

    <!--These are used in edit_fragment-->
    <style name="FieldNames" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">11sp</item> />
    </style>

    <style name="FieldValues" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">18sp</item> />
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="RowStyle" >
        <item name="android:layout_height">40sp</item>
        <item name="android:height">40sp</item>
        <item name="android:padding">3sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton"/>

</resources>
